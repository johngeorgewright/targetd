{
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "ban-types"]
    }
  },
  "tasks": {
    "check": "deno check --frozen packages/**/src",
    "commitlint": "deno run --allow-read --allow-env --allow-sys @commitlint/cli",
    "hook": "deno run --allow-read --allow-run --allow-write https://deno.land/x/deno_hooks@0.1.1/mod.ts",
    "test": "deno test --frozen --allow-all packages/**/test",
    "test:dev": "deno test --allow-all packages/**/test"
  },
  "workspace": [
    "./packages/*"
  ],
  "imports": {
    "@commitlint/cli": "npm:@commitlint/cli@^20.4.1",
    "@commitlint/config-conventional": "npm:@commitlint/config-conventional@^20.4.1",
    "lint-staged": "npm:lint-staged@^16.2.7"
  }
}
