{
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "ban-types"]
    }
  },
  "tasks": {
    "check": "deno check --frozen packages/**/src",
    "test": "deno test --frozen --allow-all packages/**/test",
    "test:dev": "deno test --allow-all packages/**/test"
  },
  "workspace": [
    "./packages/*"
  ]
}
