{
  "name": "@targetd/api",
  "description": "Type-safe targeting and feature flag system with dynamic content delivery based on query conditions. Perfect for A/B testing, feature flags, and content personalization.",
  "version": "8.0.2",
  "exports": "./src/index.ts",
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-unversioned-import"
      ]
    }
  },
  "tasks": {
    "pwd": "echo $(pwd)",
    "test": "deno test --allow-all --trace-leaks"
  },
  "imports": {
    "fast-deep-equal": "npm:fast-deep-equal@^3.1.3",
    "ts-toolbelt": "npm:ts-toolbelt@^9.6.0",
    "zod": "npm:zod@^4.3.6"
  },
  "publish": {
    "include": [
      "deno.json",
      "src/",
      "LICENSE",
      "README.md"
    ]
  }
}
