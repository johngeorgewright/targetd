{
  "name": "@targetd/fs",
  "description": "Load targeting rules from JSON/YAML files with hot-reloading support for @targetd/api Data instances.",
  "version": "7.0.2",
  "exports": "./src/index.ts",
  "imports": {
    "@es-toolkit/es-toolkit": "jsr:@es-toolkit/es-toolkit@^1.44.0",
    "@johngw/fs": "npm:@johngw/fs@^3.0.1",
    "@targetd/api": "jsr:@targetd/api@^8.0.0",
    "ts-toolbelt": "npm:ts-toolbelt@^9.6.0",
    "yaml": "npm:yaml@^2.8.2",
    "zod": "npm:zod@^4.3.6"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-unversioned-import"
      ]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "tasks": {
    "pwd": "echo $(pwd)",
    "test": "deno test --allow-all --trace-leaks"
  },
  "publish": {
    "include": [
      "deno.json",
      "src/",
      "LICENSE",
      "README.md"
    ]
  }
}
