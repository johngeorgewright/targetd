{
  "name": "@targetd/json-schema",
  "version": "5.0.0",
  "exports": {
    ".": "./src/index.ts",
    "./cli": "./src/cli.ts"
  },
  "imports": {
    "@targetd/api": "jsr:@targetd/api@^8.0.0",
    "@types/yargs": "npm:@types/yargs@^17.0.35",
    "yargs": "npm:yargs@^18.0.0",
    "zod": "npm:zod@^4.3.6"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-unversioned-import"
      ]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "tasks": {
    "pwd": "echo $(pwd)",
    "test": "deno test --allow-all --trace-leaks"
  },
  "publish": {
    "include": [
      "deno.json",
      "package.json",
      "src/",
      "LICENSE",
      "README.md"
    ]
  }
}
