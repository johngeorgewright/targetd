{
  "name": "@targetd/server",
  "description": "Express-based HTTP server for exposing @targetd/api Data instances via REST endpoints with built-in CORS and error handling.",
  "version": "8.1.2",
  "exports": "./src/index.ts",
  "imports": {
    "@johngw/error": "npm:@johngw/error@^2.2.2",
    "@targetd/api": "jsr:@targetd/api@^8.0.3",
    "@types/express": "npm:@types/express@^5.0.6",
    "@types/qs": "npm:@types/qs@^6.14.0",
    "cors": "npm:cors@^2.8.6",
    "express": "npm:express@^5.2.1",
    "express-query-boolean": "npm:express-query-boolean@^2.0.0",
    "qs": "npm:qs@^6.15.0",
    "zod": "npm:zod@^4.3.6"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-unversioned-import"
      ]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "tasks": {
    "pwd": "echo $(pwd)",
    "test": "deno test --allow-all --trace-leaks"
  },
  "publish": {
    "include": [
      "deno.json",
      "src/",
      "LICENSE",
      "README.md"
    ]
  }
}
